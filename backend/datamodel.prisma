enum Permission {
  ADMIN
  USER
  ACTIVITYCREATE
  ACTIVITYUPDATE
  ACTIVITYDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
  cart: [CartItem!]! @scalarList(strategy: RELATION)
}

type Activity {
  id: ID! @id
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  user: User!
}

type CartItem {
  id: ID! @id
  quantity: Int! @default(value: 1)
  activity: Activity
  user: User!
}